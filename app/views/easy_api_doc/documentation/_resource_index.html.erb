<div class="panel-heading">
  <h3 class="panel-title">
    <%= section_title = "#{@api_version.name} / #{@namespace.name}" %>
  </h3>
</div>

<% @namespace.resources.each do |rs| %>
  <% currently_selected = @resource && (rs.name == @resource.name) %>
  <div class="panel panel-default panel-collapse-container <%= 'panel-selected' if currently_selected %>">
    <div class="panel-heading panel-collapse-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" href="#collapse_<%= rs.name %>">
          <%= rs.name %>
        </a>
      </h4>
    </div>
    <div id="collapse_<%= rs.name %>" class="panel-collapse <%= 'collapse' unless currently_selected %> in">
      <div class="panel-body">
        <% rs.actions.each do |ac| %>
          <h5><%= link_to ac.name, action_link(ac) %></h5>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
